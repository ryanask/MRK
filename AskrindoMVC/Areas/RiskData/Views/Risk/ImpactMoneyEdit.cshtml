@model AskrindoMVC.Models.RiskImpact

@{
    ViewBag.Title = "ImpactMoneyEdit";
    Layout = "~/Areas/RiskData/Views/Shared/_Risk.cshtml";
}

@Html.Partial("_Info_Risk", Model.Risk)

<div style="padding-top: 12px">
@Html.Partial("_Link_RiskTab", new ViewDataDictionary { { "Id", Model.RiskId } })
</div>

<h3>Dampak Keuangan</h3>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    @Html.HiddenFor(m => m.RiskId)
    @Html.HiddenFor(m => m.IsMoneyImpact)
    @Html.HiddenFor(m => m.ImpactLevelId)
    <table class="edit">
        <tr>
            <td>Kerugian Langsung</td>
            <td>
                @Html.EditorFor(m => m.MoneyDirect)
                @Html.ValidationMessageFor(m => m.MoneyDirect)
            </td>
        </tr>
        <tr>
            <td>Kerugian Tidak Langsung</td>
            <td>
                @Html.EditorFor(m => m.MoneyIndirect)
                @Html.ValidationMessageFor(m => m.MoneyIndirect)
            </td>
        </tr>
    </table>
    
    <div style="padding-top: 12px">
        <input type="submit" value="Update" /> |
        @Html.ActionLink("Batal", "ImpactDetail", new { id = Model.RiskId }, null)
    </div>
}